<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".YhteenvetoFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:text="Matkalaskuri" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="50dp"
        android:text="Yhteenveto matkakuluista"
        />

    <TextView
        android:id="@+id/title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="50dp"
        android:text="kilometrikorvaukset yhteensä"
        />

    <TextView
        android:id="@+id/total_kilometrikorvaus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="50dp"
        android:text="0"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/title1"
    app:layout_constraintLeft_toRightOf="@id/total_kilometrikorvaus"
    android:layout_marginTop="50dp"
    android:text="€"
    />
    <TextView
        android:id="@+id/title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="50dp"
        android:text="päivärahat yhteensä"
        />
    <TextView
        android:id="@+id/total_päiväraha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="50dp"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title4"
        app:layout_constraintLeft_toRightOf="@id/total_päiväraha"
        android:layout_marginTop="50dp"
        android:text="€"
        />
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="50dp"
        android:text="matkakulut yhteensä"
        />
    <TextView
        android:id="@+id/total_matkakulu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title5"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="50dp"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title5"
        app:layout_constraintLeft_toRightOf="@id/total_matkakulu"
        android:layout_marginTop="50dp"
        android:text="€"
        />

    <Button
        android:id="@+id/return_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="50dp"
        android:text="Palaa"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
